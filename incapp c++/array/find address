#include<iostream>
using namespace std;


int main()
{
    int n;
    cout<<"enter the size;"<<endl;
    cin>>n;
    int a[n];
    cout<<"enter "<<n<<"number:"<<endl;
    for(int i=0;i<n;i++)
    {
        cin>>a[i];

    }
    cout<<"array elements are:"<<endl;
    for(int i=0;i<n;i++)
    {
        cout<<"a["<<i<<"]="<<a[i]<<&a[i]<<endl;
        
    }
    cout<<"address of a:"<<&a<<endl;

}
