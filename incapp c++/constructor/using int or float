#include<iostream>
using namespace std;
 class Demo
 {
    int x;
    float y;
    public:
    Demo(int r,float p)
    {
      x=r;
      y=p;
              cout<<"constructor"<<endl;

    }
    void show(){
        cout<<"show function:x="<<x<<endl;
                cout<<"show function:y="<<y<<endl;

    }
    void change()
    {
            x=100;
            y=200;
        cout<<"change function:x="<<x<<endl;
        cout<<"show function:y="<<y<<endl;

    }
    
 };
 int main()
 {
     Demo d1(3,7.8);
     d1.show();
          d1.change();

     Demo d2(2,5.6);
     d2.show();
     d2.change();
