#include<iostream>
using namespace std;

int main()

{
    int A=5,y=0;
   // int k;
    for(int i=1;i<=5;i++)
    {
        A--;
        for(int j=1;j<=A;j++){
            cout<<" ";
            
        }
        //y+=2;
        for(int k=0;k<=y;k++)
        {
            cout<<"*";
        }
        y+=2;
        cout<<endl;
    }
    //enter size
    int x=4;
    for(int i=0;i<=4;i++)
    {
        //print space
        for(int j=0;j<=i;j++)
        {
            cout<<" ";
        }
       // x+=2;
        for(int k=0;k<2*(x-i)-1;k++)
        {
            cout<<"*";
        }
        cout<<endl;
    }


}
