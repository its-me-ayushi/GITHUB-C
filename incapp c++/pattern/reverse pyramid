#include<iostream>
using namespace std;
int main()
{
    //enter size
    int x=5;
    for(int i=0;i<=5;i++)
    {
        //print space
        for(int j=0;j<=i;j++)
        {
            cout<<"   ";
        }
       // x+=2;
        for(int k=0;k<2*(x-i)-1;k++)
        {
            cout<<" * ";
        }
        cout<<endl;
    }
    

}
