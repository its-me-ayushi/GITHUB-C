using namespace std;
class Math
{  
    public:
  int n;
  void even()
 
  {
      cout<<"enter the number to check odd or even"<<endl;
      cin>>n;
      {
      if(n%2==0)
      
          cout<<"the number is even"<<endl;
          else
          cout<<"the number is odd"<<endl;
      }
  }
};
int main()
{
     Math p;
    p. even();
    
}
