#include <iostream>

using namespace std;
class Math
{  
    public:
  int n, i, m=0, flag=0; 
  int prime()
  {
  cout << "Enter the Number  "<<endl; 
  cin >> n;  
  m=n/2;  
  for(i = 2; i <= m; i++)  
  {  
      if(n % i == 0)  
      {  
          cout<<"Number is not Prime."<<endl;  
          flag=1;  
          break;  
      }  
  }  
  if (flag==0)  
      cout << "Number is Prime."<<endl;  
  return 0;  
}  
};
int main()
{
     Math p;
    p. prime();
    
}
