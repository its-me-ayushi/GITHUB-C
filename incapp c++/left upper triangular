#include<iostream>
using namespace std;
int main()
{
        int matrix[3][3];
    int row ,column;
    cout<<"enter the row and column"<<endl;
    cin>>row>>column;
    cout<<"enter "<<row<<""<<column<<"elements of matrix"<<endl;
    for(int i=0;i<row;i++)
    {
        for(int j=0;j<column;j++)
        {
        cin>>matrix[i][j];
        }
        cout<<"\n";
    }
    cout<<"enter the  triangular matrix:"<<endl;
    for(int i=0;i<row;i++)
      { 
    for (int j = 0; j < column; j++) 
    { 
      if (i + j <=2) 
      { 
      cout << matrix[i][j] << " "; 
      }
    //  else
   //           cout << "  " << " "; 

    } 
    cout << endl; 
  } 

}
