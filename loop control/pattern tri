#include <stdio.h>
int main()
{
    int size;
    printf("enter the size:");
    scanf("%d",&size);
    int x=0;
    for(int i=size;i>=1;i--)
    {
        for(int k=1;k<=x;k++)
        {
            printf("   ");
            
        }
        x--;
        for(int j=1;j<=i;j++)
        {
            printf(" * ");
            
        }
        
        printf("\n");
    }
}
