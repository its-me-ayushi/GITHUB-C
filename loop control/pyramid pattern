#include<stdio.h>
int main()
{
    int size;
    printf("enter the size:");
    scanf("%d",&size);
    int x=size-1,y=1;
    for(int i=1;i<=size;i++)
    {
        for(int k=1;k<=x;k++)
        {
            printf("   ");
            
        }
        x--;
        for(int j=1;j<=y;j++)
        {
            printf(" * ");
            
        }
        y+=2;
        printf("\n");
    }
}
